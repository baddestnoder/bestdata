<!DOCTYPE html>
<html>
<head>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<link rel="icon" href="/site_icon.jpg">
	<link rel="stylesheet" type="text/css" href="/css/purchase.css">

	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">



	<style type="text/css">

		body{
			background-color: white;
		}



		.loader_wrapper{
			margin-top: 50px;
			font-size: 5rem;
		}


		.loader_wrapper .fas{
			color: gray;
			font-size: 6rem;
			animation-name: color_change;
			animation-duration: 4000ms;
			animation-timing-function: linear;
			animation-iteration-count: infinite;
			text-align: center;
		}



				@keyframes color_change{

					0%{	
						transform: rotate(0deg);
						color: gray;
					}

					25%{
						transform: rotate(360deg);
						color: gray;
					}

					100%{
						color: blue;
					}


				}






		.wallet_wrapper{
			background-color: rgb(0, 25, 50);
			padding: 20px 0 20px 5%;
			box-sizing: border-box;
			font-size: 0.8rem;
			font-weight: 400;
			color: rgb(250, 250, 250);
		}



		article{
			border-radius: 15px;
			width: 100%;
			background-color: white;
			padding: 20px;
			box-sizing: border-box;
		}



		h1{
			text-align: center;
			padding: 2px;
			box-sizing: border-box;
			margin-top: 10px;
			border: 0;
			width: 100%;
			color: black;
			font-size: 1.5rem;
		}

		p{
			text-align: center;
			margin-top: 10px;
			color: rgb(80, 80, 80);
			line-height: 1.5;
			font-size: 1.2rem;
		}



		.data_section_wrapper{
			background-color: rgb(230, 230, 230);
			padding: 10px 0;
			border-radius: 11px;
			width: 90%;
			margin: auto;

		}




		.data_section{
			margin-top: 10px;
			display: grid;
			grid-template-columns: 1fr 1.3fr;
			line-height: 1.4;
			margin-left: 10px;
			padding: 10px;
			border-radius: 15px;
			box-sizing: border-box;
			
		}

		.data_section > p{
			font-size: 1.2rem;
			padding: 10px 0;
			color: black;
			border-bottom: 1px solid rgb(200, 200, 200);
		}



		p.first_p{
			font-size: 1.1rem;
			color: black;
			font-weight: 600;
		}


		p.second_p{
			margin-left: 30px;
			text-align: left;
		}



		.instruction{
			width: 90%;
			margin: 15px auto;
			font-size: 1.1rem;
		}




	</style>


	<title>Bank Transfer</title>
</head>






<body data-number="<%=contactInfo.number%>" data-amount="<%=data.wallet%>">
	<div class="body_overlay"></div>

	<div style="text-align: center; color: red;" class="loader_wrapper">
		<i class="fas fa-recycle"></i>
	</div>

	<article>
		<h1>We are waiting for your payment</h1>
		<p>Please do not refresh this page until you have completed the transaction...</p>
	</article>


	<div class="data_section_wrapper">
		<h1>Transfer to the following account</h1>

		<section class="data_section">
			<p class="first_p">Account Name:</p> <p class="second_p"><%=contactInfo.accountName%></p>
			<p class="first_p">Account Number:</p> <p class="second_p"><%=contactInfo.bank%></p>
		</section>
	</div>

	<br>

	<p class="instruction">Your transaction will automatically reflect here within 4 minutes, please <a href="/chatting" style="color:red">Click Here </a> to contact our customer service if the fund is not credited after 4 minutes.</p>

	


	<script type="text/javascript">




		const loader_wrapper = document.querySelector(".loader_wrapper");

		const whatsappNumber = document.querySelector(".whatsapp_number");
		const body = document.querySelector("body");


		let pastAmount = document.querySelector("body").dataset.amount;


		setInterval( async()=>{

			try{
				const result = await fetch("/getCurrentAmount", {
				method: "GET"
				});

				const res = await result.json();

				if(res.currentAmount > pastAmount){
					pastAmount = res.currentAmount;
					alert("We have received your payment, please wait.");
					window.location.href = "/purchase";
				}
			}catch(error){
				console.log(error)
			}

			
		}, 20000);
		
 

	</script>
</body>
</html>
